@model Recipe
@{
    string title = ViewBag.Action + " A Recipe";
    ViewBag.Title = title;
}

<div class="page-content">
    <h1>@ViewBag.Title</h1>

    <form asp-action="EditRecipe" method="post" id="form_id">
        <div class="form-group">
            <label asp-for="RecipeName">Recipe Name</label>
            <input asp-for="RecipeName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Ingredients">Ingredients</label>
            <input asp-for="Ingredients" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Instructions">Instructions</label>
            <input asp-for="Instructions" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Rating">Rating</label>
            <input asp-for="Rating" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
        <input type="hidden" asp-for="RecipeId" />
        <input type="hidden" asp-for="Image" />
    </form>
</div>
<div class="row">
    <div class="col-lg-11 page-bottom-content-skinny">
        <div class="row">
            <div class="col-sm-3">
                <button type="submit" class="btn btn-secondary" form="form_id">Save</button>
                <a asp-controller="Recipe" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
            <div class="col-sm-9"></div>
        </div>
    </div>
</div>